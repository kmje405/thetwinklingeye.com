---
import { client, queries } from "../lib/sanity";
import { urlFor } from "../lib/sanity";
import type { BlogPost } from "../types/sanity";

// Fetch latest featured post (most recent blog post)
let featuredPost: BlogPost | null = null;
let dailyReflections: BlogPost[] = [];

try {
  if (import.meta.env.PUBLIC_SANITY_PROJECT_ID) {
    // Fetch latest blog post as featured
    const blogPosts = await client.fetch<BlogPost[]>(queries.allBlogPosts);
    featuredPost = blogPosts[0] || null;

    // Fetch daily reflections category
    const dailyReflectionCategory = await client.fetch(
      `*[_type == "category" && slug.current == "daily-reflection"][0]{ _id }`
    );

    if (dailyReflectionCategory) {
      // Fetch latest 5 daily reflections
      dailyReflections = await client.fetch<BlogPost[]>(
        `
        *[_type == "blogPost" && references($categoryId) && defined(slug.current)] | order(publishedAt desc) [0...5] {
          _id,
          title,
          slug,
          publishedAt,
          excerpt,
          featuredImage {
            asset,
            alt,
            caption
          }
        }
      `,
        { categoryId: dailyReflectionCategory._id }
      );
    }
  }
} catch (error) {
  console.error("Error fetching sidebar content:", error);
}

// Format date helper
const formatDate = (dateString: string) => {
  return new Date(dateString).toLocaleDateString("en-US", {
    month: "short",
    day: "numeric",
    year: "numeric",
  });
};
---

<aside class="news-sidebar">
  <!-- Featured Post Section -->
  {
    featuredPost && (
      <section class="sidebar-section">
        <h3 class="sidebar-title">Featured Posts</h3>
        <article class="featured-post">
          {featuredPost.featuredImage?.asset && (
            <div class="featured-post__image">
              <a href={`/deep-dives/${featuredPost.slug.current}`}>
                <img
                  src={urlFor(featuredPost.featuredImage)
                    .width(300)
                    .height(200)
                    .url()}
                  alt={featuredPost.featuredImage.alt || featuredPost.title}
                  loading="lazy"
                />
              </a>
            </div>
          )}
          <div class="featured-post__content">
            <h4 class="featured-post__title">
              <a href={`/deep-dives/${featuredPost.slug.current}`}>
                {featuredPost.title}
              </a>
            </h4>
            {featuredPost.excerpt && (
              <p class="featured-post__excerpt">{featuredPost.excerpt}</p>
            )}
            <time class="featured-post__date">
              {formatDate(featuredPost.publishedAt)}
            </time>
          </div>
        </article>
      </section>
    )
  }

  <!-- Daily Reflections Section -->
  {
    dailyReflections.length > 0 && (
      <section class="sidebar-section">
        <h3 class="sidebar-title">Daily Reflections</h3>
        <ul class="news-list">
          {dailyReflections.map((reflection) => (
            <li class="news-item">
              <article class="news-article">
                {reflection.featuredImage?.asset && (
                  <div class="news-article__thumbnail">
                    <a href={`/deep-dives/${reflection.slug.current}`}>
                      <img
                        src={urlFor(reflection.featuredImage)
                          .width(60)
                          .height(60)
                          .url()}
                        alt={reflection.featuredImage.alt || reflection.title}
                        loading="lazy"
                      />
                    </a>
                  </div>
                )}
                <div class="news-article__content">
                  <h4 class="news-article__title">
                    <a href={`/deep-dives/${reflection.slug.current}`}>
                      {reflection.title}
                    </a>
                  </h4>
                  <time class="news-article__date">
                    {formatDate(reflection.publishedAt)}
                  </time>
                </div>
              </article>
            </li>
          ))}
        </ul>
        <div class="sidebar-footer">
          <a href="/daily-reflections" class="sidebar-link">
            View All Daily Reflections â†’
          </a>
        </div>
      </section>
    )
  }
</aside>

<style>
  .news-sidebar {
    width: 300px;
    background: #f8f0e5;
    border-radius: 0;
    box-shadow: 0 2px 12px rgba(0, 0, 0, 0.1);
    overflow: hidden;
    position: sticky;
    top: 2rem;
    max-height: calc(100vh - 4rem);
    overflow-y: auto;
  }

  .sidebar-section {
    padding: 1.5rem;
    border-bottom: 1px solid #e5e5e5;
  }

  .sidebar-section:last-child {
    border-bottom: none;
  }

  .sidebar-title {
    font-family: var(--font-header-primary);
    font-size: 1.2rem;
    font-weight: 600;
    color: var(--color-burgundy-deep);
    margin: 0 0 1rem 0;
    padding-bottom: 0.5rem;
    border-bottom: 2px solid var(--color-pink-rose);
  }

  /* Featured Post Styles */
  .featured-post {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .featured-post__image {
    width: 100%;
    border-radius: 6px;
    overflow: hidden;
  }

  .featured-post__image img {
    width: 100%;
    height: 150px;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .featured-post__image a:hover img {
    transform: scale(1.05);
  }

  .featured-post__title {
    margin: 0 0 0.5rem 0;
    font-size: 1.1rem;
    line-height: 1.3;
  }

  .featured-post__title a {
    color: var(--color-burgundy-deep);
    text-decoration: none;
    font-family: var(--font-header-primary);
    font-weight: 600;
  }

  .featured-post__title a:hover {
    color: var(--color-burgundy-brown);
    text-decoration: underline;
  }

  .featured-post__excerpt {
    font-family: var(--font-body);
    font-size: 0.9rem;
    color: #666;
    line-height: 1.4;
    margin: 0 0 0.5rem 0;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .featured-post__date {
    font-family: var(--font-body);
    font-size: 0.8rem;
    color: #999;
    font-style: italic;
  }

  /* News List Styles */
  .news-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .news-item {
    margin-bottom: 1rem;
    padding-bottom: 1rem;
    border-bottom: 1px solid #f0f0f0;
  }

  .news-item:last-child {
    margin-bottom: 0;
    padding-bottom: 0;
    border-bottom: none;
  }

  .news-article {
    display: flex;
    gap: 0.75rem;
    align-items: flex-start;
  }

  .news-article__thumbnail {
    flex-shrink: 0;
    width: 50px;
    height: 50px;
    border-radius: 4px;
    overflow: hidden;
  }

  .news-article__thumbnail img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .news-article__thumbnail a:hover img {
    transform: scale(1.1);
  }

  .news-article__content {
    flex: 1;
    min-width: 0;
  }

  .news-article__title {
    margin: 0 0 0.25rem 0;
    font-size: 0.9rem;
    line-height: 1.3;
  }

  .news-article__title a {
    color: var(--color-burgundy-deep);
    text-decoration: none;
    font-family: var(--font-body);
    font-weight: 500;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .news-article__title a:hover {
    color: var(--color-burgundy-brown);
    text-decoration: underline;
  }

  .news-article__date {
    font-family: var(--font-body);
    font-size: 0.75rem;
    color: #999;
    font-style: italic;
  }

  /* Sidebar Footer */
  .sidebar-footer {
    margin-top: 1rem;
    padding-top: 1rem;
    border-top: 1px solid #f0f0f0;
  }

  .sidebar-link {
    font-family: var(--font-body);
    font-size: 0.9rem;
    color: var(--color-burgundy-deep);
    text-decoration: none;
    font-weight: 500;
    transition: color 0.2s ease;
  }

  .sidebar-link:hover {
    color: var(--color-burgundy-brown);
    text-decoration: underline;
  }

  /* Responsive - Show on all screen sizes */
  @media (max-width: 1024px) {
    .news-sidebar {
      width: 100%;
      position: static;
      max-height: none;
      margin-bottom: 2rem;
    }
  }

  @media (max-width: 768px) {
    .news-sidebar {
      max-width: 370px;
      margin: 0 auto 2rem auto;
    }
  }
</style>
