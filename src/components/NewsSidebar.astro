---
import { client, queries } from "../lib/sanity";
import { urlFor } from "../lib/sanity";
import type { BlogPost } from "../types/sanity";

// Accept a prop to make IDs unique
export interface Props {
  variant?: "desktop" | "mobile";
}

const { variant = "desktop" } = Astro.props;
const idSuffix = variant === "mobile" ? "-mobile" : "";

// Fetch all featured posts, categories, and daily reflections
let featuredPosts: BlogPost[] = [];
let categories: any[] = [];
let dailyReflections: BlogPost[] = [];

try {
  if (import.meta.env.PUBLIC_SANITY_PROJECT_ID) {
    // Fetch posts marked as featured
    featuredPosts = await client.fetch<BlogPost[]>(`
      *[_type == "blogPost" && featured == true && defined(slug.current)] | order(publishedAt desc) {
        _id,
        title,
        slug,
        excerpt,
        publishedAt,
        featuredImage {
          asset->{
            _id,
            url
          },
          alt,
          caption
        }
      }
    `);

    // Fetch all categories
    categories = await client.fetch(`
      *[_type == "category" && defined(slug.current)] | order(title asc) {
        _id,
        title,
        slug
      }
    `);

    // Fetch daily reflections category
    const dailyReflectionCategory = await client.fetch(
      `*[_type == "category" && slug.current == "daily-reflection"][0]{ _id }`
    );

    if (dailyReflectionCategory) {
      // Fetch latest 5 daily reflections
      dailyReflections = await client.fetch<BlogPost[]>(
        `
        *[_type == "blogPost" && references($categoryId) && defined(slug.current)] | order(publishedAt desc) [0...5] {
          _id,
          title,
          slug,
          publishedAt,
          excerpt,
          featuredImage {
            asset,
            alt,
            caption
          }
        }
      `,
        { categoryId: dailyReflectionCategory._id }
      );
    }
  }
} catch (error) {
  console.error("Error fetching sidebar content:", error);
}
---

<aside class="news-sidebar">
  <!-- Browse by Category Section -->
  {
    categories.length > 0 && (
      <section class="sidebar-section">
        <h3 class="sidebar-title" id={`categories-label${idSuffix}`}>
          Browse by Category
        </h3>
        <select
          class="categories-dropdown"
          id={`categories-dropdown${idSuffix}`}
          aria-labelledby={`categories-label${idSuffix}`}
        >
          <option value="">Select a category...</option>
          {categories.map((category) => (
            <option value={`/categories/${category.slug.current}`}>
              {category.title}
            </option>
          ))}
        </select>
      </section>
    )
  }

  <!-- Featured Posts Section -->
  {
    featuredPosts.length > 0 && (
      <section class="sidebar-section">
        <h3 class="sidebar-title">Featured Posts</h3>
        <ul class="featured-posts-list">
          {featuredPosts.map((featuredPost) => (
            <li class="featured-post-item">
              <h4 class="featured-post__title">
                <a href={`/deep-dives/${featuredPost.slug.current}`}>
                  {featuredPost.title}
                </a>
              </h4>
            </li>
          ))}
        </ul>
      </section>
    )
  }

  <!-- Daily Reflections Section -->
  {
    dailyReflections.length > 0 && (
      <section class="sidebar-section">
        <h3 class="sidebar-title">Daily Reflections</h3>
        <ul class="news-list">
          {dailyReflections.map((reflection) => (
            <li class="news-item">
              <article class="news-article">
                {reflection.featuredImage?.asset && (
                  <div class="news-article__thumbnail">
                    <a href={`/deep-dives/${reflection.slug.current}`}>
                      <img
                        src={urlFor(reflection.featuredImage)
                          .width(60)
                          .height(60)
                          .url()}
                        alt={reflection.featuredImage.alt || reflection.title}
                        loading="lazy"
                      />
                    </a>
                  </div>
                )}
                <div class="news-article__content">
                  <h4 class="news-article__title">
                    <a href={`/deep-dives/${reflection.slug.current}`}>
                      {reflection.title}
                    </a>
                  </h4>
                </div>
              </article>
            </li>
          ))}
        </ul>
        <div class="sidebar-footer">
          <a href="/daily-reflections" class="sidebar-link">
            View All Daily Reflections â†’
          </a>
        </div>
      </section>
    )
  }
</aside>

<script src="/scripts/category-dropdown.js" is:inline></script>

