---
import background from '../assets/background.jpg';
import logo from "../assets/logo-color-main.svg"
import { Image } from 'astro:assets';
import Button from './Button.astro';
import { siteConfig } from '../config/site';

// Extract variables from site config
const {
  logoAltText,
  backgroundAltText,
  comingSoonMessage,
  phone: phoneNumber,
  email,
  buttonText
} = siteConfig;
---

<div id="container">
	<img id="background" src={background.src} alt={backgroundAltText} fetchpriority="high" />
	<main>
    <div class="placeholder__card">
      <div class="placeholder__card--content">
        <div class="card__content--logo">
          <Image src={logo} alt={logoAltText}/>
        </div>
        <h1 class="message">{comingSoonMessage}</h1>
        <div class="button-group">
          <Button variant="primary" size="medium" href={`mailto:${email}`}>{buttonText}</Button>
        </div>
      </div>
    </div>
	</main>
</div>


<style>
	#background {
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		z-index: -1;
	}

  main{
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
  }
  .placeholder__card{
    display: flex;
    background-color: #F8F0E5;
    height: calc(552 / 16 * 1rem);
    width: calc(576 / 16 * 1rem);
    min-width: calc(320 / 16 * 1rem);
    align-items: center;
    justify-content: center;
  }
  .placeholder__card--content{
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 100%;
    gap: 24px;
    font-family: var(--font-callout);
  }
  .card__content--logo{
    display: flex;
    align-items: center;
    justify-content: center;
    width: calc(459 / 16 * 1rem);
    height: calc(230 / 16 * 1rem);
    flex-shrink: 0;
  }
  
  .card__content--logo img {
    max-width: 100%;
    max-height: 100%;
    width: auto;
    height: auto;
    object-fit: contain;
  }

  .message{
    font-family: var(--callout);
    color: var(--callout-color);
    font-size: calc(48 / 16 * 1rem);
    font-weight: 300;
    margin: 0;
    text-align: center;
  }

  .button-group {
    display: flex;
    flex-direction: column;
    gap: 16px;
    align-items: center;
  }

  .phone-number {
    color: var(--navy-dark);
    font-size: calc(18 / 16 * 1rem);
    margin: 0;
    font-family: var(--button-text);
    font-weight: 700;
  }

	#container {
		font-family: Inter, Roboto, 'Helvetica Neue', 'Arial Nova', 'Nimbus Sans', Arial, sans-serif;
		height: 100%;
	}


	h1 {
		font-size: 22px;
		margin-top: 0.25em;
	}

	#links {
		display: flex;
		gap: 16px;
	}

	#links a {
		display: flex;
		align-items: center;
		padding: 10px 12px;
		color: #111827;
		text-decoration: none;
		transition: color 0.2s;
	}

	#links a:hover {
		color: rgb(78, 80, 86);
	}

	#links a svg {
		height: 1em;
		margin-left: 8px;
	}

	#links a.button {
		color: white;
		background: linear-gradient(83.21deg, #3245ff 0%, #bc52ee 100%);
		box-shadow:
			inset 0 0 0 1px rgba(255, 255, 255, 0.12),
			inset 0 -2px 0 rgba(0, 0, 0, 0.24);
		border-radius: 10px;
	}

	#links a.button:hover {
		color: rgb(230, 230, 230);
		box-shadow: none;
	}

	pre {
		font-family:
			ui-monospace, 'Cascadia Code', 'Source Code Pro', Menlo, Consolas, 'DejaVu Sans Mono',
			monospace;
		font-weight: normal;
		background: linear-gradient(14deg, #d83333 0%, #f041ff 100%);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
		margin: 0;
	}

	h2 {
		margin: 0 0 1em;
		font-weight: normal;
		color: #111827;
		font-size: 20px;
	}

	p {
		color: #4b5563;
		font-size: 16px;
		line-height: 24px;
		letter-spacing: -0.006em;
		margin: 0;
	}

	code {
		display: inline-block;
		background:
			linear-gradient(66.77deg, #f3cddd 0%, #f5cee7 100%) padding-box,
			linear-gradient(155deg, #d83333 0%, #f041ff 18%, #f5cee7 45%) border-box;
		border-radius: 8px;
		border: 1px solid transparent;
		padding: 6px 8px;
	}

	.box {
		padding: 16px;
		background: rgba(255, 255, 255, 1);
		border-radius: 16px;
		border: 1px solid white;
	}

	#news {
		position: absolute;
		bottom: 16px;
		right: 16px;
		max-width: 300px;
		text-decoration: none;
		transition: background 0.2s;
		backdrop-filter: blur(50px);
	}

	#news:hover {
		background: rgba(255, 255, 255, 0.55);
	}

	@media screen and (max-height: 368px) {
		#news {
			display: none;
		}
	}

	/* Tablet styles */
	@media screen and (max-width: 1024px) {
		.placeholder__card {
			height: calc(480 / 16 * 1rem);
			width: calc(500 / 16 * 1rem);
		}

		.card__content--logo {
			width: calc(380 / 16 * 1rem);
			height: calc(190 / 16 * 1rem);
		}

		.message {
			font-size: calc(40 / 16 * 1rem);
		}

		.phone-number {
			font-size: calc(16 / 16 * 1rem);
		}
	}

	/* Mobile styles */
	@media screen and (max-width: 768px) {
		main {
			padding: 20px;
		}

		.placeholder__card {
			height: calc(420 / 16 * 1rem);
			width: calc(340 / 16 * 1rem);
			min-width: calc(300 / 16 * 1rem);
			max-width: 90vw;
		}

		.placeholder__card--content {
			gap: 20px;
		}

		.card__content--logo {
			width: calc(280 / 16 * 1rem);
			height: calc(140 / 16 * 1rem);
		}

		.message {
			font-size: calc(32 / 16 * 1rem);
		}

		.phone-number {
			font-size: calc(14 / 16 * 1rem);
		}

		.button-group {
			gap: 12px;
		}
	}

	/* Small mobile styles */
	@media screen and (max-width: 480px) {
		.placeholder__card {
			height: calc(380 / 16 * 1rem);
			width: calc(300 / 16 * 1rem);
			min-width: calc(280 / 16 * 1rem);
			max-width: 85vw;
		}

		.placeholder__card--content {
			gap: 16px;
		}

		.card__content--logo {
			width: calc(240 / 16 * 1rem);
			height: calc(120 / 16 * 1rem);
		}

		.message {
			font-size: calc(28 / 16 * 1rem);
		}

		.phone-number {
			font-size: calc(13 / 16 * 1rem);
		}

		.button-group {
			gap: 10px;
		}
	}
</style>