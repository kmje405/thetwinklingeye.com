---
interface Props {
  currentPage: number;
  totalPages: number;
  baseUrl: string;
  type: "blog" | "interviews";
}

const { currentPage, totalPages, baseUrl, type } = Astro.props;

// Generate page numbers to show
function generatePageNumbers(current: number, total: number) {
  const pages: (number | string)[] = [];

  if (total <= 7) {
    // Show all pages if 7 or fewer
    for (let i = 1; i <= total; i++) {
      pages.push(i);
    }
  } else {
    // Always show first page
    pages.push(1);

    if (current > 4) {
      pages.push("...");
    }

    // Show pages around current page
    const start = Math.max(2, current - 1);
    const end = Math.min(total - 1, current + 1);

    for (let i = start; i <= end; i++) {
      pages.push(i);
    }

    if (current < total - 3) {
      pages.push("...");
    }

    // Always show last page
    if (total > 1) {
      pages.push(total);
    }
  }

  return pages;
}

const pageNumbers = generatePageNumbers(currentPage, totalPages);
const prevPage = currentPage > 1 ? currentPage - 1 : null;
const nextPage = currentPage < totalPages ? currentPage + 1 : null;
---

<nav class="list-pagination" aria-label={`${type} pagination`}>
  <div class="pagination-container">
    <!-- Previous Button -->
    <div class="pagination-nav">
      {
        prevPage ? (
          <a
            href={prevPage === 1 ? baseUrl : `${baseUrl}?page=${prevPage}`}
            class="pagination-btn pagination-prev"
          >
            <span class="pagination-arrow">←</span>
            <span class="pagination-text">Previous</span>
          </a>
        ) : (
          <div class="pagination-btn pagination-prev disabled">
            <span class="pagination-arrow">←</span>
            <span class="pagination-text">Previous</span>
          </div>
        )
      }
    </div>

    <!-- Page Numbers -->
    <div class="pagination-numbers">
      {
        pageNumbers.map((page) =>
          page === "..." ? (
            <span class="pagination-ellipsis">...</span>
          ) : (
            <a
              href={
                page === currentPage
                  ? undefined
                  : page === 1
                    ? baseUrl
                    : `${baseUrl}?page=${page}`
              }
              class={`pagination-number ${page === currentPage ? "active" : ""}`}
              aria-current={page === currentPage ? "page" : undefined}
            >
              {page}
            </a>
          )
        )
      }
    </div>

    <!-- Next Button -->
    <div class="pagination-nav">
      {
        nextPage ? (
          <a
            href={nextPage === 1 ? baseUrl : `${baseUrl}?page=${nextPage}`}
            class="pagination-btn pagination-next"
          >
            <span class="pagination-text">Next</span>
            <span class="pagination-arrow">→</span>
          </a>
        ) : (
          <div class="pagination-btn pagination-next disabled">
            <span class="pagination-text">Next</span>
            <span class="pagination-arrow">→</span>
          </div>
        )
      }
    </div>
  </div>
</nav>

<style>
  .list-pagination {
    margin: 3rem 0 2rem;
    padding: 1.5rem 0;
    border-top: 1px solid #e5e5e5;
  }

  .pagination-container {
    display: flex;
    align-items: center;
    justify-content: space-between;
    max-width: 800px;
    margin: 0 auto;
    gap: 1rem;
  }

  .pagination-nav {
    flex: 0 0 auto;
  }

  .pagination-numbers {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    flex: 1;
    justify-content: center;
  }

  .pagination-btn {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1rem;
    text-decoration: none;
    color: #333;
    border: 1px solid #ddd;
    border-radius: 8px;
    background-color: #fff;
    transition: all 0.2s ease;
    font-weight: 500;
    min-width: 100px;
    justify-content: center;
  }

  .pagination-btn:hover:not(.disabled) {
    background-color: #f8f0e5;
    border-color: #a37351;
    transform: translateY(-1px);
  }

  .pagination-btn.disabled {
    opacity: 0.5;
    cursor: not-allowed;
    color: #999;
  }

  .pagination-arrow {
    font-size: 1.1rem;
    font-weight: bold;
    color: #a37351;
  }

  .pagination-text {
    font-size: 0.9rem;
  }

  .pagination-number {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    text-decoration: none;
    color: #333;
    border: 1px solid #ddd;
    border-radius: 6px;
    background-color: #fff;
    transition: all 0.2s ease;
    font-weight: 500;
  }

  .pagination-number:hover {
    background-color: #f8f0e5;
    border-color: #a37351;
    transform: translateY(-1px);
  }

  .pagination-number.active {
    background-color: #a37351;
    color: #fff;
    border-color: #a37351;
    cursor: default;
  }

  .pagination-number.active:hover {
    transform: none;
  }

  .pagination-ellipsis {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    color: #999;
    font-weight: bold;
  }

  /* Mobile responsive */
  @media (max-width: 768px) {
    .pagination-container {
      flex-direction: column;
      gap: 1.5rem;
    }

    .pagination-nav {
      order: 2;
      display: flex;
      gap: 1rem;
    }

    .pagination-numbers {
      order: 1;
      flex-wrap: wrap;
      justify-content: center;
    }

    .pagination-btn {
      min-width: 80px;
      padding: 0.6rem 0.8rem;
    }

    .pagination-text {
      font-size: 0.8rem;
    }

    .pagination-number {
      width: 36px;
      height: 36px;
      font-size: 0.9rem;
    }
  }

  /* Tablet responsive */
  @media (min-width: 769px) and (max-width: 1024px) {
    .pagination-container {
      gap: 0.75rem;
    }

    .pagination-btn {
      min-width: 90px;
    }
  }
</style>
