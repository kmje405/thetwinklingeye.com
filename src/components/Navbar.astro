---
import { Image } from "astro:assets";
import logo from "../assets/logo-color-main.svg";

const navItems = [
  { name: "Home", href: "/" },
  { name: "Blog", href: "/blog" },
  { name: "Interviews", href: "/interviews" },
  { name: "About", href: "/about" },
  { name: "Contact", href: "/contact" },
];
---

<nav>
  <a href="/" class="logo-link">
    <Image src={logo} alt="" class="logo" />
  </a>
  <ul class="nav-links">
    {
      navItems.map((item) => (
        <li>
          <a href={item.href}>{item.name.toUpperCase()}</a>
        </li>
      ))
    }
  </ul>
</nav>
<style>
  nav {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 1rem;
  }

  .logo-link {
    margin-bottom: 1rem;
  }

  .logo {
    max-height: 100px;
    max-width: min-content;
  }

  .nav-links {
    display: flex;
    list-style: none;
    margin: 0;
    padding: 0;
    gap: 2rem;
  }

  .nav-links a {
    text-decoration: none;
    color: #2c3e50;
    font-weight: 500;
    font-size: 1.1rem;
    padding: 0.5rem 1rem;
    border-radius: 4px;
    transition: background-color 0.3s ease;
  }

  .nav-links a:hover {
    background-color: rgba(255, 255, 255, 0.8);
  }

  @media (max-width: 768px) {
    .nav-links {
      flex-direction: column;
      gap: 1rem;
      text-align: center;
    }
  }
</style>
