---
import { Image } from "astro:assets";
import logo from "../assets/logo-color-main.svg";
import mobileLogo from "../assets/mobileLogo.png";
import MobileNav from "./MobileNav.astro";
import { client } from "../lib/sanity";

// Check if there are any interviews
let hasInterviews = false;
try {
  if (import.meta.env.PUBLIC_SANITY_PROJECT_ID) {
    const interviews = await client.fetch(
      `*[_type == "interview"] | order(publishedAt desc) [0...1] { _id }`
    );
    hasInterviews = interviews.length > 0;
  }
} catch (error) {
  console.error("Error checking for interviews:", error);
  hasInterviews = false;
}

const navItems = [
  { name: "Home", href: "/" },
  { name: "Blog", href: "/blog" },
  ...(hasInterviews ? [{ name: "Interviews", href: "/interviews" }] : []),
  { name: "About", href: "/about" },
  { name: "Contact", href: "/contact" },
];
---

<nav>
  <a href="/" class="logo-link" aria-label="The Twinkling Eye - Home">
    <Image src={logo} alt="The Twinkling Eye logo" class="logo desktop-logo" />
    <Image
      src={mobileLogo}
      alt="The Twinkling Eye logo"
      class="logo mobile-logo"
    />
  </a>
  <ul class="nav-links">
    {
      navItems.map((item) => (
        <li>
          <a href={item.href}>{item.name.toUpperCase()}</a>
        </li>
      ))
    }
  </ul>
  <MobileNav />
</nav>
<style>
  nav {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 1rem;
  }

  .logo-link {
    margin-bottom: 1rem;
  }

  .logo {
    max-height: 100px;
    max-width: min-content;
  }

  .mobile-logo {
    display: none;
  }

  .desktop-logo {
    display: block;
  }

  .nav-links {
    display: flex;
    list-style: none;
    margin: 0;
    padding: 0;
    gap: 2rem;
  }

  .nav-links a {
    text-decoration: none;
    color: #2c3e50;
    font-weight: 500;
    font-size: 1.1rem;
    padding: 0.5rem 1rem;
    border-radius: 4px;
    transition: background-color 0.3s ease;
  }

  .nav-links a:hover {
    background-color: rgba(255, 255, 255, 0.8);
  }

  @media (max-width: 768px) {
    nav {
      flex-direction: row;
      justify-content: space-between;
      align-items: center;
      padding: 1rem 0.5rem;
    }

    .logo-link {
      margin-bottom: 0;
    }

    .logo {
      max-height: 60px;
    }

    .desktop-logo {
      display: none;
    }

    .mobile-logo {
      display: block;
    }

    .nav-links {
      display: none;
    }
  }

  @media (min-width: 769px) and (max-width: 1024px) {
    nav {
      padding: 1rem 0.75rem;
    }
  }
</style>
