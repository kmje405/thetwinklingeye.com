---
export interface Props {
  excerpt?: string;
  variant?: "default" | "overlay";
}

const { excerpt, variant = "default" } = Astro.props;
---

{
  excerpt && (
    <div class={`card-excerpt card-excerpt--${variant}`}>
      <p>{excerpt}</p>
    </div>
  )
}

<style>
  .card-excerpt {
    flex: 1;
    margin-bottom: 0.5rem;
    max-width: 20rem;
  }

  .card-excerpt p {
    font-family: var(--font-body);
    font-size: 1.25rem;
    color: #555;
    line-height: 1.3;
    margin-top: 0.5rem;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  /* Overlay variant */
  .card-excerpt--overlay {
    margin-bottom: 0.75rem;
  }

  .card-excerpt--overlay p {
    color: rgba(255, 255, 255, 0.95);
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.5);
    font-size: 0.85rem;
    line-height: 1.4;
    -webkit-line-clamp: 2;
  }

  /* Tablet Responsive */
  @media (min-width: 769px) and (max-width: 1024px) {
    .card-excerpt p {
      font-size: 1rem;
    }

    .card-excerpt--overlay p {
      font-size: 0.8rem;
    }
  }

  /* Mobile Responsive */
  @media (max-width: 768px) {
    .card-excerpt p {
      font-size: 0.9rem;
      -webkit-line-clamp: 3;
      max-width: 120ch;
    }

    .card-excerpt--overlay p {
      font-size: 0.75rem;
    }
  }
</style>
