<style>
  .card-play-button {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    background: rgba(0, 0, 0, 0.7);
    color: white;
    width: 50px;
    height: 50px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.2rem;
    transition: all 0.2s ease;
  }

  .card-play-button--overlay {
    z-index: 3;
    background: rgba(255, 255, 255, 0.9);
    color: #333;
    border: 2px solid rgba(255, 255, 255, 0.8);
  }

  /* Hover states are handled by parent card component */

  /* Mobile Responsive */
  @media (max-width: 768px) {
    .card-play-button {
      width: 35px;
      height: 35px;
      font-size: 0.9rem;
    }
  }
</style>
