---
interface Props {
  prevInterview?: {
    title: string;
    slug: { current: string };
  };
  nextInterview?: {
    title: string;
    slug: { current: string };
  };
}

const { prevInterview, nextInterview } = Astro.props;
---

<nav class="interview-pagination" aria-label="Interview navigation">
  <div class="pagination-container">
    <!-- Previous Interview -->
    <div class="pagination-item pagination-prev">
      {
        prevInterview ? (
          <a
            href={`/interviews/${prevInterview.slug.current}`}
            class="pagination-link"
          >
            <span class="pagination-arrow">←</span>
            <div class="pagination-content">
              <span class="pagination-label">Previous</span>
              <span class="pagination-title">{prevInterview.title}</span>
            </div>
          </a>
        ) : (
          <div class="pagination-link disabled">
            <span class="pagination-arrow">←</span>
            <div class="pagination-content">
              <span class="pagination-label">Previous</span>
              <span class="pagination-title">No previous interview</span>
            </div>
          </div>
        )
      }
    </div>
    <!-- View All Button -->
    <div class="pagination-item pagination-center">
      <a href="/interviews" class="btn btn--primary btn--small">
        View All Interviews
      </a>
    </div>
    <!-- Next Interview -->
    <div class="pagination-item pagination-next">
      {
        nextInterview ? (
          <a
            href={`/interviews/${nextInterview.slug.current}`}
            class="pagination-link"
          >
            <div class="pagination-content">
              <span class="pagination-label">Next</span>
              <span class="pagination-title">{nextInterview.title}</span>
            </div>
            <span class="pagination-arrow">→</span>
          </a>
        ) : (
          <div class="pagination-link disabled">
            <div class="pagination-content">
              <span class="pagination-label">Next</span>
              <span class="pagination-title">No next interview</span>
            </div>
            <span class="pagination-arrow">→</span>
          </div>
        )
      }
    </div>
  </div>
</nav>

<style>
  .interview-pagination {
    margin: 2rem 0;
    padding: 1.5rem 0;
    border-top: 1px solid #ddd;
    border-bottom: 1px solid #ddd;
  }

  .pagination-container {
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    gap: 1rem;
    align-items: center;
    max-width: 100%;
  }

  .pagination-item {
    display: flex;
    align-items: center;
  }

  .pagination-prev {
    justify-content: flex-start;
  }

  .pagination-center {
    justify-content: center;
  }

  .pagination-next {
    justify-content: flex-end;
  }

  .pagination-link {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.75rem 1rem;
    text-decoration: none;
    color: #333;
    border-radius: 8px;
    transition: all 0.2s ease;
    background-color: transparent;
    border: 1px solid #ddd;
    max-width: 250px;
  }

  .pagination-link:hover:not(.disabled) {
    background-color: #f8f0e5;
    border-color: #a37351;
    transform: translateY(-1px);
  }

  .pagination-link.disabled {
    opacity: 0.5;
    cursor: not-allowed;
    color: #999;
  }

  .pagination-arrow {
    font-size: 1.2rem;
    font-weight: bold;
    color: #a37351;
    flex-shrink: 0;
  }

  .pagination-content {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
    min-width: 0;
  }

  .pagination-label {
    font-size: 0.8rem;
    font-weight: 600;
    color: #a37351;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .pagination-title {
    font-size: 0.9rem;
    font-weight: 500;
    line-height: 1.3;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
  }

  /* Button styles copied from Button component */
  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    border: none;
    cursor: pointer !important;
    text-decoration: none;
    font-family: var(--button-text);
    font-weight: 700;
    transition: all 0.2s ease-in-out;
    white-space: nowrap;
    text-transform: uppercase;
  }

  .btn--primary {
    background-color: var(--button-bg-light);
    color: var(--button-font-color);
    box-shadow:
      0 4px 4px rgba(0, 0, 0, 0.05),
      0 16px 32px rgba(0, 0, 0, 0.1);
  }

  .btn--primary:hover {
    background-color: var(--button-bg-light-hover);
    transform: translateY(-1px);
    box-shadow:
      0 6px 6px rgba(0, 0, 0, 0.08),
      0 20px 40px rgba(0, 0, 0, 0.15);
  }

  .btn--small {
    padding: 8px 16px;
    font-size: 14px;
    line-height: 1.4;
  }

  /* Mobile responsive */
  @media (max-width: 768px) {
    .pagination-container {
      grid-template-columns: 1fr;
      gap: 1rem;
    }

    .pagination-prev,
    .pagination-next,
    .pagination-center {
      justify-content: center;
    }

    .pagination-link {
      max-width: 100%;
      justify-content: center;
    }

    .pagination-title {
      text-align: center;
    }
  }

  /* Tablet responsive */
  @media (min-width: 769px) and (max-width: 1024px) {
    .pagination-container {
      grid-template-columns: 1fr auto 1fr;
      gap: 0.75rem;
    }

    .pagination-link {
      max-width: 200px;
    }
  }
</style>
