---
import Button from "./Button.astro";
import { urlFor } from "../lib/sanity";
import type { SanityImage } from "../types/sanity";

export interface Props {
  title: string;
  excerpt: string;
  publishedAt: string;
  slug: string;
  featuredImage?: SanityImage;
  author: {
    name: string;
    image?: SanityImage;
  };
  categories?: {
    title: string;
    slug: { current: string };
  }[];
}

const {
  title,
  excerpt,
  publishedAt,
  slug,
  featuredImage,
  author,
  categories = [],
} = Astro.props;

// Format date
const formattedDate = new Date(publishedAt).toLocaleDateString("en-US", {
  year: "numeric",
  month: "long",
  day: "numeric",
});

// Get featured image URL if available
const imageUrl = featuredImage
  ? urlFor(featuredImage).width(400).height(250).url()
  : null;
---

<article class="blog__feed--card">
  {
    imageUrl && (
      <div class="blog__feed--card__image">
        <img src={imageUrl} alt={featuredImage?.alt || title} loading="lazy" />
      </div>
    )
  }

  <div class="blog__feed--card__content">
    <div class="blog__feed--card__meta">
      <time class="blog__feed--card__date">{formattedDate}</time>
      {
        categories.length > 0 && (
          <div class="blog__feed--card__categories">
            {categories.map((category, index) => (
              <span class="blog__feed--card__category">
                {category.title}
                {index < categories.length - 1 ? ", " : ""}
              </span>
            ))}
          </div>
        )
      }
    </div>

    <h2 class="blog__feed--card__title">{title}</h2>

    <p class="blog__feed--card__excerpt">{excerpt}</p>

    <div class="blog__feed--card__author">
      <span>by {author?.name || "Unknown Author"}</span>
    </div>

    <Button variant="primary" size="small" type="button" href={`/blog/${slug}`}>
      read more
    </Button>
  </div>
</article>

<style is:global>
  .blog__feed--card {
    background-color: #f8f0e5;
    max-width: 560px;
    min-height: max-content;
    margin-block: 1rem;
    display: flex;
    flex-direction: column;
    border-radius: 8px;
    overflow: hidden;
    transition:
      transform 0.2s ease,
      box-shadow 0.2s ease;
  }

  .blog__feed--card:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
  }

  .blog__feed--card__image {
    width: 100%;
    aspect-ratio: 16 / 10;
    overflow: hidden;
  }

  .blog__feed--card__image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.2s ease;
  }

  .blog__feed--card:hover .blog__feed--card__image img {
    transform: scale(1.05);
  }

  .blog__feed--card__content {
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    flex-grow: 1;
  }

  .blog__feed--card__meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
    font-size: 0.85rem;
    color: #666;
  }

  .blog__feed--card__date {
    font-family: var(--font-body);
  }

  .blog__feed--card__categories {
    font-family: var(--font-body);
  }

  .blog__feed--card__category {
    color: #a37351;
    font-weight: 500;
  }

  .blog__feed--card__title {
    font-family: var(--font-header-primary);
    font-size: 1.25rem;
    font-weight: var(--font-weight-h2);
    color: #333;
    margin: 0 0 1rem 0;
    line-height: 1.3;
  }

  .blog__feed--card__excerpt {
    font-family: var(--font-body);
    font-size: var(--font-size-body);
    color: #555;
    line-height: 1.5;
    margin: 0 0 1rem 0;
    flex-grow: 1;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .blog__feed--card__author {
    font-family: var(--font-body);
    font-size: 0.9rem;
    color: #666;
    margin-bottom: 1.5rem;
  }

  .blog__feed--card .btn {
    align-self: flex-start;
  }

  @media (max-width: 768px) {
    .blog__feed--card {
      max-width: 100%;
    }

    .blog__feed--card__content {
      padding: 1rem;
    }
  }
</style>
