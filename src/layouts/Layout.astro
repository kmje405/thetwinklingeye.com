---
import "../styles/index.css";
import { siteConfig } from "../config/site";
import { getSiteConfig } from "../lib/siteConfig";
import { urlFor } from "../lib/sanity";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import { Image } from "astro:assets";
import backgroundImage from "../assets/background.jpg";
import plantDecor from "../assets/plantDecor.png";

// Get site configuration from Sanity
const dynamicSiteConfig = await getSiteConfig();
const faviconUrl = dynamicSiteConfig.sanityData?.favicon
  ? urlFor(dynamicSiteConfig.sanityData.favicon).url()
  : "/favicon.svg";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset={siteConfig.charset} />
    <meta name="viewport" content={siteConfig.viewport} />
    <meta name="format-detection" content={siteConfig.formatDetection} />
    <style>
      /* Prevent flash of white background */
      html {
        background-color: var(--color-cream-warm, #f8f0e5);
      }
      body {
        background-color: transparent;
      }
      /* Hide content until background image loads */
      .content-wrapper {
        opacity: 0;
        transition: opacity 0.3s ease;
      }
      .content-loaded .content-wrapper {
        opacity: 1;
      }
    </style>
    <link rel="icon" href={faviconUrl} type="image/svg+xml" />
    <link rel="alternate icon" href={faviconUrl} />
    <link rel="mask-icon" href={faviconUrl} color="#ec87a5" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={dynamicSiteConfig.description} />
    <title>{dynamicSiteConfig.title}</title>
    <!-- Hyvor Talk Script - Global -->
    <script async src="https://talk.hyvor.com/embed/embed.js" type="module"
    ></script>
  </head>
  <body>
    <script>
      // Add content-loaded class when page is ready
      document.addEventListener("DOMContentLoaded", () => {
        document.body.classList.add("content-loaded");
      });

      // Also add it immediately if DOM is already loaded
      if (document.readyState === "loading") {
        document.addEventListener("DOMContentLoaded", () => {
          document.body.classList.add("content-loaded");
        });
      } else {
        document.body.classList.add("content-loaded");
      }
    </script>
    <Image
      src={backgroundImage}
      alt=""
      class="background-image"
      width={1440}
      height={1440}
      format="webp"
      quality={85}
    />
    <div class="content-wrapper">
      <Navbar />
      <main>
        <slot />
        <Image
          src={plantDecor}
          alt="Plant decoration"
          class="plant-decor"
          width={450}
          height={450}
          format="webp"
          quality={80}
        />
      </main>
      <Footer />
    </div>
  </body>
</html>

<style>
  body {
    position: relative;
    margin: 0;
    padding: 0;
  }

  .background-image {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    object-fit: cover;
    z-index: -1;
  }

  .content-wrapper {
    position: relative;
    z-index: 1;
  }

  main {
    min-height: 90vh;
    position: relative;
    z-index: 2;
  }

  .plant-decor {
    position: absolute;
    bottom: 100px;
    right: 2rem;
    z-index: -1;
    opacity: 0.8;
  }

  /* Tablet responsive */
  @media (max-width: 1024px) {
    .plant-decor {
      width: 360px;
      right: 1.5rem;
      bottom: 80px;
    }
  }

  /* Mobile responsive */
  @media (max-width: 768px) {
    .plant-decor {
      width: 300px;
      right: 1rem;
      bottom: 60px;
    }
  }

  /* Small mobile */
  @media (max-width: 480px) {
    .plant-decor {
      width: 240px;
      right: 0.5rem;
      bottom: 50px;
    }
  }
</style>
