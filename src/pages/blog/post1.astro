  <style>
    /* Editorial grid layout */
    .post {
      background-color: #f8f0e5;
      max-width: 48rem;

      display: grid;
      grid-template-columns: 1fr 1fr;
      column-gap: 1.5rem;
      row-gap: 0;
      margin: 0 auto;
      padding: 1rem;
      margin-bottom: 2rem;
    }

    /* Title spans full width */
    .post__title {
      grid-column: 1 / -1;
    }

    .post__title h1 {
      font-family: var(--font-header-primary);
      font-size: var(--font-size-h1);
      font-weight: var(--font-weight-h1);
      line-height: var(--line-height-h1);
      color: #333;
      text-align: center;
    }

    /* Hero image in left column */
    .post__hero {
      grid-column: 1 / 2;
      margin: 0;
    }

    .post__hero img {
      width: 100%;
      height: 27.1875rem;
      display: block;
      border-radius: 6px;
      object-fit: cover;
    }

    .post__hero figcaption {
      font-family: var(--font-body);
      font-size: var(--font-size-body);
      font-weight: var(--font-weight-body);
      line-height: var(--line-height-body);
      color: #333;
    }

    /* Intro in right column */
    .post__intro {
      grid-column: 2 / 3;
      align-self: start;
    }

    /* Body spans both columns */
    .post__body {
      grid-column: 1 / -1;
    }

    .post__intro p {
      font-family: var(--font-body);
      font-size: 1.15rem;
      font-weight: 500;
      line-height: var(--line-height-body);
      color: #333;
    }

    .post__body p {
      font-family: var(--font-body);
      font-size: var(--font-size-body);
      font-weight: var(--font-weight-body);
      line-height: var(--line-height-body);
      color: #333;
    }

    .post__body p:last-child {
      margin-bottom: 0;
    }

    /* Pull Quote - now nested in intro, no grid positioning needed */
    .post__pullquote {
      align-self: start;
    }

    .post__pullquote blockquote {
      font-family: var(--font-callout);
      font-size: var(--font-size-callout);
      font-weight: var(--font-weight-callout);
      line-height: 1.1;
      color: #461121;
    }

    /* Mobile collapse */
    @media (max-width: 768px) {
      .post {
        grid-template-columns: 1fr;
        max-width: 100%;
        margin: 2rem;
      }

      /* Stack content in proper order: title, hero (image + caption), pullquote (callout), intro, body, conclusion */
      .post__title {
        grid-column: 1;
        order: 1;
      }

      .post__hero {
        grid-column: 1;
        order: 2;
      }

      .post__hero img {
        border-radius: 0;
      }

      .post__intro {
        grid-column: 1;
        order: 3;
      }

      .post__body {
        grid-column: 1;
        order: 4;
      }

      .post__pullquote blockquote {
        text-align: center;
      }

      .post__pullquote blockquote {
        text-align: center;
      }
    }

    /* Tablet adjustments */
    @media (min-width: 769px) and (max-width: 1024px) {
      .post {
        grid-template-columns: 1fr;
        max-width: 100%;
        margin: 2rem;
      }

      /* Stack content in proper order for tablet: title, hero (image + caption), pullquote (callout), intro, body, conclusion */
      .post__title {
        grid-column: 1;
        order: 1;
      }

      .post__hero {
        grid-column: 1;
        order: 2;
      }

      .post__hero img {
        border-radius: 0;
      }

      .post__intro {
        grid-column: 1;
        order: 3;
      }

      .post__body {
        grid-column: 1;
        order: 4;
      }
    }
  </style>
</Layout>
