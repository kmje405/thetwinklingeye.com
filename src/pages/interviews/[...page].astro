---
import Layout from "../../layouts/Layout.astro";
import InterviewFeed from "../../components/InterviewFeed.astro";
import { client } from "../../lib/sanity";
import type { InterviewPreview } from "../../types/sanity";
import type { Page } from "astro";

type Props = {
  page: Page<InterviewPreview>;
};

export async function getStaticPaths({ paginate }: any) {
  // Fetch all interviews
  let interviews: InterviewPreview[] = [];
  
  try {
    if (import.meta.env.PUBLIC_SANITY_PROJECT_ID) {
      interviews = await client.fetch<InterviewPreview[]>(`
        *[_type == "interview"] | order(publishedAt desc) {
          _id,
          title,
          slug,
          excerpt,
          publishedAt,
          youtubeUrl,
          thumbnail {
            asset->{
              _id,
              url
            },
            alt,
            caption
          },
          guest->{
            name,
            bio,
            image {
              asset->{
                _id,
                url
              },
              alt,
              caption
            }
          }
        }
      `);

      // If no interviews found in Sanity, use fallback for testing
      if (interviews.length === 0) {
        console.warn("No interviews found in Sanity, using fallback data for testing");

        // Create fallback data
        interviews = [
          {
            _id: "fallback-1",
            title: "Sample Interview 1",
            slug: { _type: "slug", current: "sample-interview-1" },
            excerpt: "This is the first sample interview. Connect Sanity to see your actual content.",
            publishedAt: new Date().toISOString(),
            cardVariant: "full-image",
            youtubeUrl: "https://www.youtube.com/watch?v=dQw4w9WgXcQ",
            thumbnail: undefined,
            guest: {
              name: "Guest One",
              bio: undefined,
              image: undefined,
            },
          },
          {
            _id: "fallback-2",
            title: "Sample Interview 2",
            slug: { _type: "slug", current: "sample-interview-2" },
            excerpt: "This is the second sample interview for testing pagination.",
            publishedAt: new Date(Date.now() - 86400000).toISOString(),
            cardVariant: "full-image",
            youtubeUrl: "https://www.youtube.com/watch?v=dQw4w9WgXcQ",
            thumbnail: undefined,
            guest: {
              name: "Guest Two",
              bio: undefined,
              image: undefined,
            },
          },
          {
            _id: "fallback-3",
            title: "Sample Interview 3",
            slug: { _type: "slug", current: "sample-interview-3" },
            excerpt: "This is the third sample interview for testing pagination.",
            publishedAt: new Date(Date.now() - 172800000).toISOString(),
            cardVariant: "full-image",
            youtubeUrl: "https://www.youtube.com/watch?v=dQw4w9WgXcQ",
            thumbnail: undefined,
            guest: {
              name: "Guest Three",
              bio: undefined,
              image: undefined,
            },
          },
          {
            _id: "fallback-4",
            title: "Sample Interview 4",
            slug: { _type: "slug", current: "sample-interview-4" },
            excerpt: "This is the fourth sample interview for testing pagination.",
            publishedAt: new Date(Date.now() - 259200000).toISOString(),
            cardVariant: "full-image",
            youtubeUrl: "https://www.youtube.com/watch?v=dQw4w9WgXcQ",
            thumbnail: undefined,
            guest: {
              name: "Guest Four",
              bio: undefined,
              image: undefined,
            },
          },
          {
            _id: "fallback-5",
            title: "Sample Interview 5",
            slug: { _type: "slug", current: "sample-interview-5" },
            excerpt: "This is the fifth sample interview for testing pagination.",
            publishedAt: new Date(Date.now() - 345600000).toISOString(),
            cardVariant: "full-image",
            youtubeUrl: "https://www.youtube.com/watch?v=dQw4w9WgXcQ",
            thumbnail: undefined,
            guest: {
              name: "Guest Five",
              bio: undefined,
              image: undefined,
            },
          },
        ];
      }
    } else {
      console.warn("Sanity not configured, showing placeholder content");
      // Use fallback data when Sanity is not configured
      interviews = [];
    }
  } catch (e) {
    console.error("Error fetching interviews:", e);
    // Use fallback data when there's an error
    interviews = [];
  }

  return paginate(interviews, { pageSize: 4 });
}

const { page } = Astro.props;
---

<Layout>
  <div class="interview__feed--wrapper">
    <InterviewFeed
      interviews={page.data}
      currentPage={page.currentPage}
      postsPerPage={4}
      error={null}
    />

    {
      page.lastPage > 1 && (
        <nav class="list-pagination" aria-label="Interview pagination">
          <div class="pagination-container">
            <!-- Previous Button -->
            <div class="pagination-nav">
              {page.url.prev ? (
                <a
                  href={page.url.prev}
                  class="pagination-btn pagination-prev"
                >
                  <span class="pagination-arrow">←</span>
                  <span class="pagination-text">Previous</span>
                </a>
              ) : (
                <div class="pagination-btn pagination-prev disabled">
                  <span class="pagination-arrow">←</span>
                  <span class="pagination-text">Previous</span>
                </div>
              )}
            </div>

            <!-- Page Numbers -->
            <div class="pagination-numbers">
              {Array.from({ length: page.lastPage }, (_, i) => i + 1).map((num) => (
                <a
                  href={num === 1 ? "/interviews" : `/interviews/${num}`}
                  class={`pagination-number ${page.currentPage === num ? "active" : ""}`}
                  aria-current={page.currentPage === num ? "page" : undefined}
                >
                  {num}
                </a>
              ))}
            </div>

            <!-- Next Button -->
            <div class="pagination-nav">
              {page.url.next ? (
                <a
                  href={page.url.next}
                  class="pagination-btn pagination-next"
                >
                  <span class="pagination-text">Next</span>
                  <span class="pagination-arrow">→</span>
                </a>
              ) : (
                <div class="pagination-btn pagination-next disabled">
                  <span class="pagination-text">Next</span>
                  <span class="pagination-arrow">→</span>
                </div>
              )}
            </div>
          </div>
        </nav>
      )
    }
  </div>
</Layout>

<style>
  body {
    overflow-x: hidden;
  }

  .interview__feed--wrapper {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
    flex-direction: column;
    justify-self: center;
    overflow-x: hidden;
    width: 100%;
    box-sizing: border-box;
  }

  .list-pagination {
    margin: 3rem 0 2rem;
    padding: 1.5rem 1rem;
    border-top: 1px solid #e5e5e5;
  }

  .pagination-container {
    display: flex;
    align-items: center;
    justify-content: space-between;
    max-width: 800px;
    margin: 0 auto;
    gap: 1rem;
    padding: 0 1rem;
  }

  .pagination-nav {
    flex: 0 0 auto;
  }

  .pagination-numbers {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    flex: 1;
    justify-content: center;
  }

  .pagination-btn {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1rem;
    text-decoration: none;
    color: #333;
    border: 1px solid #ddd;
    border-radius: 8px;
    background-color: #fff;
    transition: all 0.2s ease;
    font-weight: 500;
    min-width: 100px;
    justify-content: center;
  }

  .pagination-btn:hover:not(.disabled) {
    background-color: #f8f0e5;
    border-color: #a37351;
    transform: translateY(-1px);
  }

  .pagination-btn.disabled {
    opacity: 0.5;
    cursor: not-allowed;
    color: #999;
  }

  .pagination-arrow {
    font-size: 1.1rem;
    font-weight: bold;
    color: #a37351;
  }

  .pagination-text {
    font-size: 0.9rem;
  }

  .pagination-number {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    text-decoration: none;
    color: #333;
    border: 1px solid #ddd;
    border-radius: 6px;
    background-color: #fff;
    transition: all 0.2s ease;
    font-weight: 500;
  }

  .pagination-number:hover {
    background-color: #f8f0e5;
    border-color: #a37351;
    transform: translateY(-1px);
  }

  .pagination-number.active {
    background-color: #a37351;
    color: #fff;
    border-color: #a37351;
    cursor: default;
  }

  .pagination-number.active:hover {
    transform: none;
  }

  /* Mobile responsive */
  @media (max-width: 768px) {
    .interview__feed--wrapper {
      padding: 0 0.5rem;
    }

    .list-pagination {
      padding: 1.5rem 0.5rem;
    }

    .pagination-container {
      flex-direction: column;
      gap: 1.5rem;
      padding: 0;
    }

    .pagination-nav {
      order: 2;
      display: flex;
      gap: 1rem;
    }

    .pagination-numbers {
      order: 1;
      flex-wrap: wrap;
      justify-content: center;
    }

    .pagination-btn {
      min-width: 80px;
      padding: 0.6rem 0.8rem;
    }

    .pagination-text {
      font-size: 0.8rem;
    }

    .pagination-number {
      width: 36px;
      height: 36px;
      font-size: 0.9rem;
    }
  }

  /* Tablet responsive */
  @media (min-width: 769px) and (max-width: 1024px) {
    .interview__feed--wrapper {
      padding: 0 0.75rem;
    }

    .pagination-container {
      gap: 0.75rem;
    }

    .pagination-btn {
      min-width: 90px;
    }
  }
</style>